<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FirstFragment">
    <TextView
        android:id="@+id/top"
        android:background="#ffffff"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>


    <RelativeLayout
        android:id="@+id/top2"
        android:layout_below="@id/top"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/keshiname"
            android:textColor="#000"
            android:text="背单词"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/xuanze"
        android:text="选择学习词汇"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/dp_22"
        android:layout_below="@id/top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/top3"
        android:gravity="center"
        android:layout_below="@id/xuanze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/rl_gaozhong"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_gaozhong"
            android:background="@drawable/shuben"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:text="高中"
            android:layout_below="@id/iv_gaozhong"
            android:textSize="20sp"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_siji"
        android:layout_toRightOf="@id/rl_gaozhong"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_siji"
            android:background="@drawable/shuben"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:text="四级"
            android:layout_below="@id/iv_siji"
            android:textSize="20sp"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_liuji"
        android:layout_toRightOf="@id/rl_siji"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_liuji"
            android:background="@drawable/shuben"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:text="六级"
            android:layout_below="@id/iv_liuji"
            android:textSize="20sp"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yasi"
        android:layout_toRightOf="@+id/rl_liuji"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_yasi"
            android:background="@drawable/shuben"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:text="雅思"
            android:layout_below="@id/iv_yasi"
            android:textSize="20sp"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_cihuiliang"
        android:layout_margin="10dp"
        android:background="@drawable/coner"
        android:layout_below="@id/top3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            android:id="@+id/head"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tubiao"
            app:civ_border_color="#bfbfbf"/>
        <TextView
            android:layout_below="@id/head"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:id="@+id/huanying"
            android:textSize="25dp"
            android:text="欢迎你！"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/huanying"
        android:layout_margin="20dp"
        android:textColor="#000"
        android:id="@+id/set"
        android:textSize="25dp"
        android:text="点击设置单词学习量"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>